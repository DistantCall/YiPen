<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/popwindow_shape"
              android:layout_width="match_parent"
              android:paddingTop="15px"
              android:paddingBottom="15px"
              android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="24px"
              android:text="相机"
              android:padding="5px"
              android:textColor="@color/colorAccent"
              android:id="@+id/comera"
              android:gravity="center"
    />
<View android:layout_width="match_parent" android:layout_height="3px" android:background="#666" />
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="24px"
              android:text="相册"
              android:padding="5px"
              android:textColor="@color/colorAccent"
              android:id="@+id/compture"
              android:gravity="center"
    />
    <View android:layout_width="match_parent" android:layout_height="3px" android:background="#666" android:padding="15px"/>

    <TextView
            android:padding="5px"
            android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/colorAccent"
              android:textSize="24px"
              android:text="取消"
              android:id="@+id/upload_blak"
              android:gravity="center"

    />
</LinearLayout>