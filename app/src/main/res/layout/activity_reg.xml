<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvp.mvp.view.RegActivity">
    <RelativeLayout
            android:layout_margin="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

    >

        <TextView
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10px"
                android:textSize="60px"
                android:id="@+id/reg_blak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×"
        />
        <TextView
                android:layout_marginTop="2px"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reg"
                android:textSize="30px"
        />
    </RelativeLayout>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="请输入您的手机号,登录您的账户"
              android:id="@+id/titleFlag"
              android:layout_marginLeft="20px"
    />
    <RelativeLayout
            android:padding="20px"
            android:layout_marginTop="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout

                android:background="@drawable/edit_shape"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal"

        >

            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
            />
            <EditText
                    android:layout_marginLeft="10px"
                    android:layout_weight="1"
                    android:layout_margin="5px"
                    android:background="@null"
                    android:id="@+id/telephone"
                    android:layout_width="match_parent"
                    android:hint="请输入手机号"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
            android:padding="20px"
            android:layout_marginTop="10px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:padding="10px"
                android:layout_marginRight="5px"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/edit_shape"

                android:layout_height="80px">
            <TextView
                    android:layout_margin="5px"

                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
            />

            <EditText
                    android:layout_marginLeft="10px"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:id="@+id/regCode"
                    android:layout_width="match_parent"
                    android:hint="请输入验证码"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
                android:id="@+id/regmax"
                android:layout_marginLeft="10px"
                android:background="#F08"
                android:layout_width="200px"
                android:layout_height="80px"
                android:text="获取验证码"
                android:textColor="#FFF"
        />
    </LinearLayout>
    <Button android:layout_width="match_parent" android:layout_height="90px"
            android:layout_margin="10px"
            android:id="@+id/login_btn"
            android:text="登录"
            android:background="#F08"
            android:textColor="#cae2dbe2"
    />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"></LinearLayout>
</LinearLayout>