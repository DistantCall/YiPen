<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvp.mvp.view.MainActivity"
        xmlns:hjm="http://schemas.android.com/apk/res-auto">
    <com.hjm.bottomtabbar.BottomTabBar
            android:layout_marginTop="30px"
            android:id="@+id/bottom_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            hjm:tab_divider_background="#FF0000"
            hjm:tab_divider_height="15px"
            hjm:tab_font_size="16px"
            hjm:tab_img_height="80px"
            hjm:tab_img_width="30px"
            hjm:tab_isshow_divider="true"
            hjm:tab_padding_bottom="5px"
            hjm:tab_padding_top="8px"
            hjm:tab_selected_color="#000000"
            hjm:tab_unselected_color="@color/colorAccent" />
</LinearLayout>