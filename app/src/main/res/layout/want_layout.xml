<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="15px"
        android:layout_height="wrap_content">
        />
<GridLayout
            android:horizontalSpacing="15px"
            android:verticalSpacing="5px"
            android:orientation="vertical"
            android:background="@drawable/border_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
            android:layout_marginTop="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paystr"
            android:id="@+id/text_pay1"
            android:gravity="center"
            android:textSize="24px"
    ></TextView>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_pay2"
            android:layout_marginTop="10px"
            android:text="0.00"
            android:gravity="center"
            android:textSize="35px"
    ></TextView>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20px"
    android:padding="15px"
    >
        <Button android:layout_width="80px"
                android:layout_height="wrap_content"
        android:text="@string/gomoney"
                android:background="@drawable/btn_selecter"
                android:layout_weight="1"
                android:id="@+id/btn_pay1"
                android:textSize="22px"
                android:layout_marginRight="15px"
                android:textColor="#0f0"
        />
        <Button android:layout_width="80px"
                android:background="@drawable/btn_selecter"
                android:layout_height="wrap_content"
                android:text="@string/server"
                android:textSize="22px"
                android:layout_marginLeft="10px"
                android:layout_weight="1"
                android:id="@+id/btn_pay2"
        />
    </LinearLayout>
</GridLayout>
</RelativeLayout>