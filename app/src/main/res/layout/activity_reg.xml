<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/reg_user_icon"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        fresco:roundAsCircle="true"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:placeholderImage="@mipmap/user_icon"
        android:layout_marginBottom="@dimen/dp_20"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_margin="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号码"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:padding="@dimen/dp_3"
            android:id="@+id/telephone"
            android:layout_width="@dimen/dp_208"
            android:layout_height="31dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#9999"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_margin="@dimen/dp_15">
    <TextView
        android:layout_centerVertical="true"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="验证码"
        />

        <EditText
            android:padding="@dimen/dp_3"
            android:id="@+id/regCode"
            android:layout_width="200dp"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_centerVertical="true"
            android:background="@null" />


        <Button
            android:id="@+id/regmax"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#F5A623"
            android:background="@drawable/click_shape"
            android:text="获取验证码"
            android:textSize="@dimen/dp_14" />
<View
android:layout_alignParentBottom="true"
android:layout_width="match_parent"
android:layout_height="@dimen/dp_1"
android:background="#999"
    />
    </RelativeLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/login_shape"
        android:text="登录"
       android:textColor="@color/colorWirte"
        android:textSize="@dimen/dp_14" />


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="第三方登录"
                    />
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
<LinearLayout

    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_100">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
            android:src="@mipmap/qq"
        />
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="QQ"
        />

</LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_100">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:src="@mipmap/weixin"
                            />
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:text="微信"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_100">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:src="@mipmap/weibo"
                            />
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:text="微博"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

</LinearLayout>