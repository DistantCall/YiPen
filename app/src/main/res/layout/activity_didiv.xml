<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/colorWirte"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        >

        <ImageView
            android:id="@+id/history_back"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="缴费记录"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

<RelativeLayout
android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/history_bg"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130">


        <RelativeLayout
            android:layout_centerVertical="true"
            android:background="@color/colorWirte"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="@dimen/dp_130">


            <TextView
                android:textColor="@color/colorBlue"
                android:id="@+id/didiv_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/paystr"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:id="@+id/countPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerInParent="true"
                android:text="0.00元"
                android:layout_marginBottom="@dimen/dp_15"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/text_jiaofei"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_35"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_selecter1"
                android:text="@string/gomoney"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>
</RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/colorWirte"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_80">
        <LinearLayout

            android:id="@+id/jinqi_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_60"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/jinqi_text"
                android:text="近期记录"
                android:textColor="@color/colOrange"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/lishi_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_60"
            android:orientation="vertical"
            >
            <TextView
                android:textSize="@dimen/sp_16"
                android:id="@+id/lishitext"
                android:text="历史记录"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            android:id="@+id/jinqi_view"
            android:layout_width="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_height="@dimen/dp_2"
            android:background="@color/colOrange"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_60"
            android:id="@+id/lishi_view"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_2"

            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorGlay"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/jiaofie_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>