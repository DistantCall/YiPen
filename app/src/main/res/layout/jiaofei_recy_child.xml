<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/jiaofei_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:textColor="@color/colOrange"
            android:text="time"
            android:id="@+id/jiaofei_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/colOrange"
            android:id="@+id/jiaofei_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已缴费"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_centerVertical="true"
            android:src="@mipmap/left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:text="地址"
        android:textColor="@color/colorGlay"
        android:id="@+id/addres_jiaofei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_14" />
</LinearLayout>