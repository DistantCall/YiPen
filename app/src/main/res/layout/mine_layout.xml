<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/userinfo_bg" />

        <RelativeLayout
            android:id="@+id/sbian"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"

            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@mipmap/bg_qiang">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_Namne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="user"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="登录"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>
        </RelativeLayout>
<LinearLayout
    android:id="@+id/count_font"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/dp_13"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/jiaofei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:src="@mipmap/jiaof" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="缴费记录"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/fenqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:src="@mipmap/fenq" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="分期记录"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:src="@mipmap/dingd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="我的订单"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>


        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginBottom="-30dp"
            android:id="@+id/user_icon"
            android:layout_above="@id/sbian"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            fresco:roundAsCircle="true" />

    </RelativeLayout>


<LinearLayout
    android:padding="@dimen/dp_3"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/colorWirte"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"

            >

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/img4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_32"
                android:text="我的优惠卷"
                android:textSize="@dimen/sp_16"

                />

            <ImageView
               android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:src="@mipmap/left_back"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_40"
            android:background="#4f666666" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/colorWirte"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            >

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/mine_mg"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/img7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_32"
                android:text="微信公众号"
                android:textSize="@dimen/sp_16"

                />

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:src="@mipmap/left_back"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/colorWirte"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_45"
            android:background="#4f666666" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"

            >

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/img8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_32"
                android:text="我的客服"
                android:textSize="@dimen/sp_16"

                />

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:src="@mipmap/left_back"
                />
        </RelativeLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_45"
        android:background="#4f666666" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/colorWirte"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"

            >

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/img9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_32"
                android:text="关于我们"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:src="@mipmap/left_back"
                />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
    <TextView
        android:id="@+id/freishLogin"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginBottom="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@color/colorWirte"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="安全退出" />
</LinearLayout>