<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:background="@drawable/pay_bg"
        android:paddingRight="15px"
        android:paddingLeft="15px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15px"
            android:background="@color/colorWirte"
            android:orientation="vertical">

    <TextView
        android:id="@+id/historytime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="28px" />

    <TextView
        android:id="@+id/historydomicile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:textSize="28px" />

    <TextView
        android:layout_marginTop="10px"
        android:id="@+id/historyuserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28px" />

    <TextView
        android:layout_marginTop="10px"
        android:id="@+id/historyarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10px"
        android:id="@+id/historysum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>